-extends "base.haml"

-block content
  -for meeting in orga.meeting_set.all|slice:":10"
    %section
      %h2.title
        %span.title-bar
          %a{href: "{% url 'meeting_detail' meeting.id meeting.slug %}"}
            -if meeting.title
              =meeting.title
            -else
              No title

          %small
            =meeting.date

      .pad-content
        =meeting.html|safe

      %hr.separator

  %p.all-pv
    %a{href: "{% url 'meeting_list' %}"}
      All PVs
